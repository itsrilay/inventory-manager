<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("../partials/errors.ejs") %>
    <form
      method="POST"
      action="<%= product.id ? `/products/${product.id}/update` : '/products/create' %>">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        value="<%= product.name ? product.name : '' %>" />

      <label for="description">Description</label>
      <textarea name="description" id="description">
<%= product.description ? product.description : '' %></textarea
      >

      <label for="stock-quantity">Stock Quantity</label>
      <input
        type="number"
        name="stockQuantity"
        id="stock-quantity"
        min="0"
        step="1"
        value="<%= product.stockQuantity ? product.stockQuantity : '' %>" />

      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        id="price"
        min="0"
        step="0.01"
        value="<%= product.price ? product.price : '' %>" />

      <select name="categoryId" id="categoryId">
        <% categories.forEach((category) => { %>
        <option value="<%= category.id %>"><%= category.name %></option>
        <% }) %>
      </select>

      <label for="active">Active</label>
      <input type="radio" name="isActive" id="active" value="true" checked <%=
      product.isActive === true ? 'checked' : '' %> />

      <label for="inactive">Inactive</label>
      <input type="radio" name="isActive" id="inactive" value="false" <%=
      product.isActive === false ? 'checked' : '' %> />

      <button type="submit">Submit</button>
    </form>
  </body>
</html>
