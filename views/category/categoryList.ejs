<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <div>
      <% categories.forEach((category) => { %> <%- include('category',
      {category: category}) %>
      <form action="/categories/<%= category.id %>/delete" method="POST">
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this category?');">
          Delete
        </button>
      </form>
      <% }) %>
    </div>
  </body>
</html>
